{
  "name": "bde-backend",
  "version": "1.0.0",
  "description": "Backend project of BDE",
  "main": "src/index.ts",
  "scripts": {
    "serve": "cross-env NODE_PATH=./ nodemon -x ts-node ./src/index.ts",
    "test": "npx jest src/api/* src/script/*",
    "init-db": "npx jest src/init-data/*",
    "eslint": "eslint --ext .ts,.js --cache",
    "eslint-fix": "lint-staged",
    "eslint-no-cache": "eslint --fix --ext .ts,.js",
    "password-hash": "cross-env NODE_PATH=./ ts-node src/script/password-hash/password-hash.script.ts",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:migrate:create": "npx sequelize-cli migration:create --name",
    "prepare": "husky install",
    "yarn": "yarn install --frozen-lockfile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bde-secret/bde-backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bde-secret/bde-backend/issues"
  },
  "homepage": "https://github.com/bde-secret/bde-backend#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "detect-secrets": "^1.0.6",
    "eslint": "^8.1.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.14",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "pre-commit": "^1.2.2",
    "sequelize": "^6.8.0",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.1.6",
    "ts-node": "^10.4.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix --cache"
  }
}
